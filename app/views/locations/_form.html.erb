  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Location Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<% if @location.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>
			<ul>
				<% @location.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		  
      <%= form_for([@organization, @location], remote: true) do |form| %>
	  
	  <%= form.hidden_field :organization_id, value: @organization.id %>
	  
      <div class="form-group row">
        <label for="locationName" class="col-sm-2 col-form-label">Location Name</label>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="locationCode" class="col-sm-2 col-form-label">Location Code</label>
        <div class="col-sm-10">
          <%= form.text_field :code, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="locationWeight" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
          <%= form.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="locationVolume" class="col-sm-2 col-form-label">City</label>
        <div class="col-sm-10">
          <%= form.text_field :city, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="locationPrice" class="col-sm-2 col-form-label">State / Providence </label>
        <div class="col-sm-10">
          <%= form.text_field :state_providence, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="locationPrice" class="col-sm-2 col-form-label">Postal Code </label>
        <div class="col-sm-10">
          <%= form.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="locationPrice" class="col-sm-2 col-form-label">Country </label>
        <div class="col-sm-10">
          <%= form.text_field :country, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="locationPrice" class="col-sm-2 col-form-label">Latitude</label>
        <div class="col-sm-10">
          <%= form.text_field :latitude, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="locationPrice" class="col-sm-2 col-form-label">Longitude</label>
        <div class="col-sm-10">
          <%= form.text_field :longitude, class: "form-control" %>
        </div>
      </div>

      <div class="modal-footer">
		  <%= form.submit class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>

